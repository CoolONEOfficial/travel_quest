<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pattern_fill"
    tools:context="ru.coolone.travelquest.ui.fragments.AboutFragment">

    <LinearLayout
        android:id="@+id/about_root_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/about_logo"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:contentDescription="@string/about_logo_details"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/about_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/content_inset"
            android:text="@string/about_title"
            android:textColor="@color/colorAccent"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/about_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_subtitle"
            android:textColor="@color/primary_light" />
    </LinearLayout>

    <TextView
        android:id="@+id/about_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_below="@id/about_root_layout"
        android:layout_centerHorizontal="true"
        android:text="@string/intro_greetings_text"
        android:textColor="@color/primary_light"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/version_name_str"
        android:textColor="@color/primary_light" />
</RelativeLayout>
