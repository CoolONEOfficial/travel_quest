<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.coolone.travelquest.fragments.quests.QuestDetailsFragment">

    <LinearLayout
        android:id="@+id/layout_details_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/accent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" 
                android:orientation="vertical">

                <TextView
                    android:id="@+id/details_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textColor="@color/primary_text_inverse"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/details_types"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Types"
                    android:textColor="@color/primary_text_inverse"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextView
                android:layout_weight="0"
                android:id="@+id/details_rating"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="end"
                android:text="2,5"
                android:textAlignment="center"
                android:textColor="@color/primary_text_inverse"
                android:textSize="42sp" />

            <TextView
                android:layout_weight="0"
                android:id="@+id/details_rating_star"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="â˜…"
                android:textAlignment="viewStart"
                android:textColor="@color/primary_text_inverse"
                android:textSize="42sp"
                android:gravity="start" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_details_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/primary">

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/details_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Url"
                android:textColor="@color/primary_text_inverse"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/details_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Phone"
                android:textAlignment="textEnd"
                android:textColor="@color/primary_text_inverse"
                android:textSize="18sp"
                android:gravity="end" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
