<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.coolone.travelquest.fragments.quests.QuestDetailsFragment"
    android:id="@+id/layout_details">

    <RelativeLayout
        android:id="@+id/layout_details_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/accent">

        <TextView
            android:id="@+id/details_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/details_rating_star"
            android:gravity="end"
            android:text="2,5"
            android:textAlignment="center"
            android:textColor="@color/primary_text_inverse"
            android:textSize="42sp"
            android:layout_toStartOf="@+id/details_rating_star" />

        <TextView
            android:id="@+id/details_rating_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="start"
            android:text="â˜…"
            android:textAlignment="viewStart"
            android:textColor="@color/primary_text_inverse"
            android:textSize="42sp"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/details_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/primary_text_inverse"
            android:textSize="24sp"
            android:layout_toStartOf="@+id/details_rating"
            android:layout_toLeftOf="@+id/details_rating" />

        <TextView
            android:id="@+id/details_types"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/details_title"
            android:layout_toStartOf="@+id/details_rating"
            android:layout_toLeftOf="@+id/details_rating"
            android:text="Types"
            android:textColor="@color/primary_text_inverse"
            android:textSize="18sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_details_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <HorizontalScrollView
            android:id="@+id/details_photos_scroll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/details_photos_height"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/details_photos_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/details_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Url"
                android:textColor="@color/primary_text"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/details_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Phone"
                android:textAlignment="textEnd"
                android:textColor="@color/primary_text"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
